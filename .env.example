# Database Configuration
DATABASE_URL=postgresql://admin:password123@localhost:5432/queue_management
POSTGRES_DB=queue_management
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-here-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
HOST=192.168.1.16
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Frontend URLs
REACT_APP_API_URL=http://192.168.1.16:8000
REACT_APP_WS_URL=ws://192.168.1.16:8000/ws

# SMS Settings (simulation mode)
SMS_PROVIDER=simulation
SMS_API_KEY=test-key-for-simulation
SMS_FROM_NUMBER=+1234567890

# Email Settings
EMAIL_PROVIDER=simulation
EMAIL_FROM=noreply@queuesystem.local
EMAIL_SMTP_SERVER=localhost
EMAIL_SMTP_PORT=587

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Queue Settings
DEFAULT_QUEUE_TIMEOUT_MINUTES=30
MAX_QUEUE_SIZE=100
CALL_TIMEOUT_SECONDS=120

# CORS Settings
CORS_ORIGINS=["http://192.168.1.16:3000","http://localhost:3000","http://192.168.1.*:3000"]
