# ======================================
# QStream - Queue Management System
# Environment Variables Template
# ======================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://user:password@host:5432/database_name
POSTGRES_DB=queue_management
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ===================
# REDIS (optional, for caching)
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# JWT AUTHENTICATION
# ===================
# Generate secure key: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# APPLICATION
# ===================
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=production

# ===================
# FRONTEND URLs
# ===================
# For production, use your actual domain
REACT_APP_API_URL=https://your-domain.com/api/v1
REACT_APP_WS_URL=wss://your-domain.com/ws

# For local development
# REACT_APP_API_URL=http://localhost:8000/api/v1
# REACT_APP_WS_URL=ws://localhost:8000/ws

# ===================
# CORS SETTINGS
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===================
# SECURITY (optional)
# ===================
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ===================
# QUEUE SETTINGS
# ===================
DEFAULT_QUEUE_TIMEOUT_MINUTES=30
MAX_QUEUE_SIZE=100
CALL_TIMEOUT_SECONDS=120

# ===================
# AI HELPER (optional)
# ===================
# Users provide their own Gemini API key via frontend
# No server-side key needed

# ===================
# SMS/EMAIL (optional simulation)
# ===================
SMS_PROVIDER=simulation
EMAIL_PROVIDER=simulation
